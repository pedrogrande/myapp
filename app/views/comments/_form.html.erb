<div class="row">
<div class="col-md-4">
<%= simple_form_for(@comment) do |f| %>
  <%= f.error_notification %>

  <%= f.input :post, as: :hidden, input_html: {value: :post_id} %>

  <div class="form-group">
    <%= f.input :content, input_html: { class: 'form-control' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
</div>
</div>
